#!/bin/sh

TIKZ_PREVIEW_FILE=tikz_preview.tex
TEXENGINE=lualatex

if [ "$#" -ne 1 ]; then
    echo "Illegal number of parameters. Just pass path to tikz file."
fi

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

clear
echo "\\def\\inputfile{$1}\\input{$DIR/../tikz/template.tex}" > tikz_preview.tex
latexrun --latex-cmd lualatex "$TIKZ_PREVIEW_FILE"

if [ $? -eq 0 ]; then
    PDF_FILE="$(basename "$TIKZ_PREVIEW_FILE" .tex).pdf"
    echo "Opening $PDF_FILE..."
    open_skim "$PDF_FILE"
fi
